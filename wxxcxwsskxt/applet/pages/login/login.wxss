/**index.wxss**/
.container {
    height: 100%;
    display: flex;
    flex-direction: column;
    align-items: center;
    justify-content: space-between;
    padding: 200rpx 0;
    box-sizing: border-box;
}
.login-box{
  width: 80%;
  margin: 0 auto;
  border-radius: 30rpx;
  overflow: hidden;
  padding: 30rpx;
  background-color: #ffffff;
}
.userinfo {
  display: flex;
  flex-direction: column;
  align-items: center;
}

.userinfo-avatar {
  width: 128rpx;
  height: 128rpx;
  margin: 20rpx;
  border-radius: 50%;
}

.userinfo-nickname {
  color: #aaa;
}

.usermotto {
  margin-top: 200px;
}
.wx-login{
  display: flex;
  flex-flow: column;
  justify-content: center;
  align-items: center;
  margin-top: 20rpx;
}
.wx-login .login-title{
  font-size: 24rpx;
  margin-bottom:20rpx;
}
.register-list{
  margin: 10px 0;
  display: flex;
  justify-content: space-between;
  align-items: center;
}
.register-1{
  justify-content: flex-end;
}
.register-dialog{
  margin: 0;
  overflow: hidden;
}
.register-dialog .btn{
  flex: 1;
  margin-left: -2px;
}
.register-dialog .btn:first-child{
  margin-left: 0;
}